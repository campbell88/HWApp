@model HWAssignment.Models.User

@{
    ViewBag.Title = "Register";
}

<h2 style="font-family:Verdana;">Register</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <style>
            body {
                margin: 0;
            }

            ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                width: 25%;
                background-color: #f1f1f1;
                position: fixed;
                height: 100%;
                overflow: auto;
            }

            li a {
                display: block;
                color: #000;
                padding: 8px 16px;
                text-decoration: none;
            }

                li a.active {
                    background-color: #A3E4D7;
                    color: white;
                }

                li a:hover:not(.active) {
                    background-color: #555;
                    color: white;
                }
        </style>
       
    </head>

    <body>

        <ul style="font-family:Verdana;">
            <li>
                <a class="active"
                   href="/Home/Index">Home</a>
            </li>
            <li><a href="/Home/About">About Me</a></li>
            <li><a href="/Home/Contact">Contact</a></li>
            <li><a href="/RegUser/Register">Register</a></li>
            <li><a href="/RegUser/AdminReport">Admin Report</a></li>
        </ul>
        <div style="margin-left:25%;padding:1px 16px;height:1000px;">

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (ViewBag.Message != null)
                {
                    <div class="=" form-group">
                        <div class="col-md-10"> @ViewBag.Message</div>
                    </div>

                }

                <div align="center">
                    <div class="form-group"; style="font-family:Verdana;">
                        First Name
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                        Last Name
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group"; style="font-family:Verdana;">
                       Address 1
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                        Address 2
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                       City
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group"; style="font-family:Verdana;">
                      State
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                      Zip
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                      Country <i>(Read only)</i>
                        <div class="col-md-10">
                            <input STYLE="text-align: center;" type="text" name="Country" value="US" readonly>
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                       E-mail
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                       Password
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" ; style="font-family:Verdana;">
                       Confirm Password
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ConfirmedPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmedPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Register" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
            </body>
            
            }

            <div>
                @Html.ActionLink("View Registration List", "AdminReport")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
                <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
                <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
            }
